@typeparam Titem

@if (MyList is null)
{
    @if(Loading is null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <img src="https://cdn.dribbble.com/userupload/22852131/file/original-b11fb5084ec481cba3572faccd00732c.gif">
        </div>

    }
    else
    {
        @Loading 
    }
}
else if(MyList.Count == 0)
{
    @if(NoRecords is null)
    {
        <p>No hay registros para mostrar...</p>

    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}

